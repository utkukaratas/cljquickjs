{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "make debug",
      "command": "/usr/bin/make",
      "args": [
        "qjs-debug"
      ],
      "options": {
        "cwd": "${workspaceFolder}/quickjs"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}